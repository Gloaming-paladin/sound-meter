<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@drawable/bg_dialog"
    android:layout_marginBottom="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/db_value"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="85.20 dB"
            android:textSize="18sp"
            android:textStyle="bold"
            android:contentDescription="噪音分贝值" />

        <TextView
            android:id="@+id/timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2023-05-15 10:30:25"
            android:textSize="14sp"
            android:textColor="#888888"
            android:contentDescription="测量时间" />

    </LinearLayout>

    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="位置: 39.9042, 116.4074"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:contentDescription="地理位置" />

</LinearLayout>
